<style>

  }
    body {
        font-family: Inter, sans-serif;
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }
  .images{
    width:50%;
  }
  .winter-apparel{
    padding-top:5%;
    padding-bottom:10%;
  }


    .content {
        display: flex;
        flex-wrap: wrap;
        /* max-width: 1200px; */
        width:100vw;
        overflow: hidden;
       align-items: center;
      gap:5%;
    }


    .content.reverse {
        flex-direction: row-reverse;
    }



    .image {
        width: 100%;
        height: auto;
    }

    .text {
        flex: 1;
        padding: 20px;

      
    }

    .text h2 {
        margin-top: 0;
    }

    .shop-button {
        display: inline-block;
        /* margin-top: 20px; */
        padding: 10px 20px;
        background-color: #007BFF;
        color: white;
        text-decoration: none;
        border-radius: 40% 40% 5% 5%;
    }



  /* imagesecond {

  }
   */
  .imagesecond {
     flex: 1;
      display: flex;
      flex-direction: column;
      align-items: end;
      justify-content: flex-end;
      position: relative;
      width: 100%;
      height: 65vh;
      border-radius: 10px;
  }

  .simage-one{
      position: relative;
      z-index: 1;
      width: 40%;
     border-radius: 10% 10% 5% 5%;
     border:1px solid black;
  }

  .simage-two {
      position: absolute;
      bottom: 10%;
      left: 24%;
      z-index: 0;
      width: 40%;
      border-radius: 10% 10% 5% 5%; 
      border:1px solid black;
  
  }


    @media (max-width: 768px) {
      .imagesecond{
        
        align-items: center;
      }
      .content {
            flex-direction: column;
            width:100%;
            /* height:100vh; */
           }
       .content>*{
        width:100%;
        height:50%;
      
     
        .imagesecond>* {
          width:24%;
           }
        .simage-one{
         display:block;
         left:10%;
         top:10%;
        }
      .simage-two{
        left: 12%;
        tip:7%;
      }
    }
</style>

{% schema %}
{
  "name": "check",
  "settings": [
    {
      "type": "image_picker",
      "label": "First Image",
      "id": "desktop_image_one",
      "info": "Recommended size: 1440 x 660"
    },
    {
      "type": "image_picker",
      "label": "Second Image",
      "id": "desktop_image_two",
      "info": "Recommended size: 1440 x 660"
    },
    {
      "type": "color_background",
      "id": "background_color",
      "label": "Background color",
      "default":"#e9f2f7"
    },
    {
      "type": "richtext",
      "label": "subtext",
      "id": "paraheading",
      "default": "<p>Be Winter Ready!</p>"
    },

     {
      "type": "richtext",
      "label": "Heading",
      "id": "heading",
      "default": "<p> Apparel & accessories</p>"
    },
   {
      "type": "richtext",
      "label": "Description",
      "id": "description",
      "default": "<p>Our carefully curated collection features high-quality gloves, hats, scarves, goggles, jackets, and more, designed to withstand the harshest winter conditions while enhancing your performance.</p>"
    },

    {
      "type": "select",
      "label": "Flex Direction",
      "id": "flex_direction",
      "options": [
        {
          "value": "normal",
          "label": "Normal"
        },
        {
          "value": "reverse",
          "label": "Reverse"
        }
      ],
      "default": "normal"
    }
  ],
  "blocks": [
    {
      "type": "focal",
      "name": "focal",
      "settings": [
        {
          "type": "text",
          "id": "x_axis",
          "label": "x axis"
        },
        {
          "type": "text",
          "id": "y_axis",
          "label": "y axis"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "check",
      "blocks": [
        {
          "type": "focal"
        }
      ]
    }
  ]
}
{% endschema %}
